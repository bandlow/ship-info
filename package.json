{
  "name": "ship-info",
  "version": "1.0.1",
  "description": "Ship Information API based on LLoyds MDB",
  "type": "module",
  "dependencies": {
    "@cap-js/hana": "^2.5.1",
    "express": "^4"
  },
  "devDependencies": {
    "@cap-js/cds-test": "^0.4.1",
    "@cap-js/sqlite": "^2.1.2",
    "@sap/cds": "^9.6.1",
    "mocha": "^11.7.5"
  },
  "scripts": {
    "test": "mocha --timeout 30000 --exit --reporter spec test/**/*.test.cjs",
    "test:watch": "mocha --timeout 30000 --watch test/**/*.test.cjs",
    "stammdaten": "wsl bash ./scripts/import-stammdaten.sh",
    "deploy-db": "cds deploy --to sqlite:ship-info.sqlite",
    "dev": "npm run stammdaten && cds watch srv/",
    "reset": "rm ship-info.sqlite && npm run deploy-db && npm run stammdaten",
    "hana": "cds deploy --to hana",
    "deploy": "mbt build && cf deploy mta_archives/${npm_package_name}_${npm_package_version}.mtar",
    "deploy:check": "mbt build",
    "deploy:preview": "mbt build && cf deploy mta_archives/${npm_package_name}_${npm_package_version}.mtar --preview",
    "version:patch": "npm version patch -m 'chore: release v%s'",
    "version:minor": "npm version minor -m 'feat: release v%s'"
  },
  "private": true,
  "cds": {
    "requires": {
      "db": {
        "kind": "sqlite",
        "credentials": {
          "url": "ship-info.sqlite"
        },
        "[production]": {
          "kind": "hana"
        }
      }
    }
  }
}
